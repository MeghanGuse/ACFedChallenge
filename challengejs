//Update donation amount
var totalDonations {
  goal = 5000
  donated = 3750

  checkRemaining: function(){
    return this.goal - this.donated;
  }
};

var elRemainder = document.getElementById('Remainder');
  elRemainder.textContext = checkRemaining();
)

//Progress bar
function move() {
  var elem = document.getElementById("progress");
  var width = 1;
  var id = setInterval(frame, 10);
  function frame() {
    if (width >= 100) {
      clearInterval(id);
    } else {
      width++;
      elem.style.width = width + '%';
    }
  }
}

//Update number of donors
var donors {
  donors = 0
  onSubmit {
    donors ++
  }
  var el=document.getElementById('donors')
  el.textContext=
}

//Error messaging

if (input >= 5) {
  document.write('Thank you for your donation!');
}
else {
